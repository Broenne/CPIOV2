void InitAlive(void) {
	PrepareStatusLed();
	Init_Timer();
}

 void TIM2_IRQHandler(void) {

	portDISABLE_INTERRUPTS();
//	__disable_irq();

	SwitchMainLed();

	__HAL_TIM_CLEAR_FLAG(&s_TimerInstance, TIM_FLAG_UPDATE);

	//SanCanAlive();

//	__enable_irq();
	portENABLE_INTERRUPTS();

}
